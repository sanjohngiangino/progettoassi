<div class ="container text-center">
 <br>
<h3>
  <strong><%= @song.title %></strong>
  
</h3>

<p>
  <strong>Artist:</strong>
  <%= @song.artist %>
<br>
  <strong>Year:</strong>
  <%= @song.year %>
<br>
  <strong>Genre:</strong>
  <%= @song.genre %>
<br>
 <strong>Playlist:</strong> <%= @song.playlist.name%></p>

<div class ="flex-row d-flex justify-content-center">
<div class ="col-md-6">
<div class="card mt-5">
  <div class="card-body">

    <%= form_with(model: song) do |form| %>
          <% if song.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

            <ul>
              <% song.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

    <div class="form-group">
        <div class="field">
          <%= form.label :title %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= form.label :artist %>
    <%= form.text_field :artist , class: "form-control"%>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, class: "form-control" %>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre , class: "form-control"%>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= form.label :lyric %>
    <%= form.text_area :lyric , class: "form-control"%>
  </div>
  </div>

  <div class="form-group">
  <div class="field">
    <%= form.label :Editor %>
    <%= form.select :user_id , User.all.map{ |c| [c.email,c.id]} , class: "form-control"%>
  </div>
  </div>

  <div class="form-group">
  
  <div class="field">
    <%= form.label :Playlist %>
    <%= form.select :playlist_id, Playlist.all.map{ |c| [c.name,c.id]} , class: "form-control"%>
  </div>
  </div>

  <div class="actions">
    <%= form.submit "Prosegui", class: "btn btn-outline-primary" %>
    <%= link_to 'Back', songs_path, class: "btn btn-outline-secondary" %>
  </div>
  
<% end %>
  </div>
</div>

</div>


</div>